<script>

    var homeForm = document.getElementById($homeform);
    var q1a1 = document.getElementById("$q1a1");
    var q1a2 = document.getElementById("$q1a2");

    var q2a1 = document.getElementById("$q2a1");
    var q2a2 = document.getElementById("$q2a2");

    var q3a1 = document.getElementById("$q3a1");
    var q3a2 = document.getElementById("$q3a2");

    var answer1Element = document.getElementById("$a1");
    var answer2Element = document.getElementById("$a2");
    var answer3Element = document.getElementById("$a3");

    var answer1Value;
    var answer2Value;
    var answer3Value;

    q1a1.onclick = this.clickQ1A1.bind(this);
    q1a2.onclick = this.clickQ1A2.bind(this);

    q2a1.onclick = this.clickQ2A1.bind(this);
    q2a2.onclick = this.clickQ2A2.bind(this);


    q3a1.onclick = this.clickQ3A1.bind(this);
    q3a2.onclick = this.clickQ3A2.bind(this);


    function clickQ1A1() {
        q1a1.style.display = "none";
        q1a2.style.display = "none";

        q2a1.style.display = "";
        q2a2.style.display = "";
        answer1Value = "Teen";
    }

    function clickQ1A2() {
        q1a1.style.display = "none";
        q1a2.style.display = "none";

        q2a1.style.display = "";
        q2a2.style.display = "";

        answer1Value = "Young Adult";
    }
    //youth/teen
    function clickQ2A1() {
        q2a1.style.display = "none";
        q2a2.style.display = "none";

        q3a1.style.display = "";
        q3a2.style.display = "";

        answer2Value = "Financial ";
    }

    function clickQ2A2() {
        q2a1.style.display = "none";
        q2a2.style.display = "none";

        q3a1.style.display = "";
        q3a2.style.display = "";

        answer2Value = "Mental";
    }
    //youth/teen
    function clickQ3A1() {

        answer3Value = "Etc A";
        formSubmit();
    }

    function clickQ3A2() {

        answer3Value = "Etc V";
        formSubmit();
    }

    function formSubmit() {
        answer1Element.value = answer1Value;
        answer2Element.value = answer2Value;
        answer3Element.value = answer3Value;
        document.getElementById("$homeform").submit();
    }

</script>
